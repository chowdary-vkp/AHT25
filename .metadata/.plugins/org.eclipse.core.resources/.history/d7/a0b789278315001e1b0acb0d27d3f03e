/* USER CODE BEGIN PV */
typedef struct AdcValues{
uint16_t Raw[2]; /* Raw values from ADC */
double IntSensTmp; /* Temperature */
}adcval_t;
adcval_t Adc;
typedef struct Flags
{
uint8_t ADCCMPLT;
}flag_t;
flag_t Flg = {0, };
/* USER CODE END PV */

